{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "newLine": "lf"
  },
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules",
    "test",
    "karma.conf.ts"
  ]
}
